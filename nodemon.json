{
  "watch": ["src/**/*.ts", "nodemon.json", ".env"],
  "exec": "node --no-warnings --loader ts-node/esm --experimental-specifier-resolution=node -r tsconfig-paths/register src/index.ts",
  "ext": "ts",
  "ignore": ["node_modules", "dist"],
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "app:*, config:*"
  }
}